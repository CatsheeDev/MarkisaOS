<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="MarkisaOS" package="com.hellory4n.markisa" version="0.13.0" company="hellory4n" />
	<app main="Main" path="export" file="MarkisaOS" />

	<define name="cairo" />

	<window width="0" height="0" background="#000000" fps="60" if="android" />
	<window fullscreen="true" background="#000000" fps="60" if="desktop" />
	<android minimum-sdk-version="21" />
	<android target-sdk-version="34" />
	<window hardware="true" allow-shaders="true" require-shaders="true" if="cpp"/>
	<window vsync="true" antialiasing="4" if="cpp" />
	<window orientation="landscape"/>
	<icon path="assets/icon.png" size="1024" />
	
	<source path="src" />
	
	<haxelib name="lime" />
	
	<assets path="assets" />

	<language name="en" />
	
</project>